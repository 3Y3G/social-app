model Story {
  id        String   @id @default(cuid())
  image     String
  caption   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  @@index([authorId])
  @@index([createdAt])
}

// Make sure to add this to the User model if it doesn't already exist
model User {
  // ... existing fields
  stories Story[]
  // ... other relations
}

